{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.spec.ts", "tests/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off",
            "useThrowOnlyError": "off"
          }
        }
      }
    }
  ]
}
